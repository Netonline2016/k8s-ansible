KUBE_API_ARGS="--admission-control=NamespaceLifecycle,LimitRanger,ServiceAccount,DefaultStorageClass,ResourceQuota,NodeRestriction \
  --advertise-address={{ ansible_default_ipv4.address }} \
  --bind-address={{ ansible_default_ipv4.address }} \
  --secure-port=16443 \
  --insecure-port=0 \
  --authorization-mode=Node,RBAC \
  --runtime-config=rbac.authorization.k8s.io/v1beta1 \
  --kubelet-https=true \
  --token-auth-file={{ bootstrapSSLDir }}/token.csv \
  --service-cluster-ip-range={{ SERVICE_CIDR }} \
  --service-node-port-range={{ NODE_PORT_RANGE }} \
  --tls-cert-file={{ apiSSLDir }}/apiserver.pem \
  --tls-private-key-file={{ apiSSLDir }}/apiserver-key.pem \
